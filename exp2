#include <iostream>
#include <string>
#include <cstring>
#include <queue>
#include <cctype>
#include <cstdio>
using namespace std;

typedef int Rank;

class Bitmap {
private:
    unsigned char* M;
protected:
    Rank N;
    Rank _sz;
    void init(Rank n) {
        M = new unsigned char[N = (n + 7) / 8];
        memset(M, 0, N);
        _sz = 0;
    }
public:
    Bitmap(Rank n = 8) { init(n); }
    Bitmap(const Bitmap& other) {
        N = other.N;
        _sz = other._sz;
        M = new unsigned char[N];
        memcpy(M, other.M, N * sizeof(unsigned char));
    }
    Bitmap& operator=(const Bitmap& other) {
        if (this == &other) return *this;
        delete[] M;
        N = other.N;
        _sz = other._sz;
        M = new unsigned char[N];
        memcpy(M, other.M, N * sizeof(unsigned char));
        return *this;
    }
    Bitmap(char* file, Rank n = 8) {
        init(n);
        FILE* fp = fopen(file, "r");
        fread(M, sizeof(char), N, fp);
        fclose(fp);
        for (_sz = 0; _sz < n; _sz++)
            _sz += test(_sz);
    }
    ~Bitmap() {
        delete[] M;
        M = nullptr;
        _sz = 0;
    }
    Rank size() const { return _sz; }
    void set(Rank k) {
        expand(k);
        if (!test(k)) {
            _sz++;
            M[k >> 3] |= (0x80 >> (k & 0x07));
        }
    }
    void clear(Rank k) {
        expand(k);
        if (test(k)) {
            _sz--;
            M[k >> 3] &= ~(0x80 >> (k & 0x07));
        }
    }
    // 去掉test的const限定
    bool test(Rank k) {
        expand(k);
        return M[k >> 3] & (0x80 >> (k & 0x07));
    }
    void dump(char* file) const {
        FILE* fp = fopen(file, "w");
        fwrite(M, sizeof(char), N, fp);
        fclose(fp);
    }
    // 去掉bits2string的const限定
    char* bits2string(Rank n) {
        expand(n - 1);
        char* s = new char[n + 1];
        s[n] = '\0';
        for (Rank i = 0; i < n; i++)
            s[i] = test(i) ? '1' : '0';
        return s;
    }
private:
    // 去掉expand的const限定
    void expand(Rank k) {
        if (k < 8 * N) return;
        Rank oldN = N;
        unsigned char* oldM = M;
        init(k + 1);
        memcpy(M, oldM, oldN);
        delete[] oldM;
    }
};

struct BinNode {
    int count;
    char ch;
    BinNode* left;
    BinNode* right;
    BinNode* parent;
    BinNode(int cnt, char c = 0)
        : count(cnt), ch(c), left(nullptr), right(nullptr), parent(nullptr) {}
};

class BinTree {
protected:
    BinNode* root;
    void destroy(BinNode* node) {
        if (node == nullptr) return;
        destroy(node->left);
        destroy(node->right);
        delete node;
    }
public:
    BinTree() : root(nullptr) {}
    virtual ~BinTree() { destroy(root); }
    BinNode* getRoot() const { return root; }
    void setRoot(BinNode* node) { root = node; }
};

class HuffTree : public BinTree {
public:
    HuffTree(int freq[]) {
        priority_queue<BinNode*, vector<BinNode*>, Compare> minHeap;
        for (int i = 0; i < 26; i++) {
            if (freq[i] > 0) {
                char ch = 'a' + i;
                minHeap.push(new BinNode(freq[i], ch));
            }
        }
        while (minHeap.size() > 1) {
            BinNode* left = minHeap.top();
            minHeap.pop();
            BinNode* right = minHeap.top();
            minHeap.pop();
            BinNode* parent = new BinNode(left->count + right->count);
            parent->left = left;
            parent->right = right;
            left->parent = parent;
            right->parent = parent;
            minHeap.push(parent);
        }
        root = minHeap.empty() ? nullptr : minHeap.top();
    }
private:
    struct Compare {
        bool operator()(BinNode* a, BinNode* b) {
            return a->count > b->count;
        }
    };
};

class HuffCode {
private:
    Bitmap bits;
    int length;
public:
    HuffCode() : length(0) {}
    HuffCode(const HuffCode& other)
        : bits(other.bits), length(other.length) {}
    HuffCode& operator=(const HuffCode& other) {
        if (this == &other) return *this;
        bits = other.bits;
        length = other.length;
        return *this;
    }
    void appendBit(bool bit) {
        if (bit) bits.set(length);
        else bits.clear(length);
        length++;
    }
    void removeLastBit() {
        if (length > 0) length--;
    }
    int getLength() const { return length; }
    // 去掉toString的const限定
    string toString() {
        if (length == 0) return "";
        char* cstr = bits.bits2string(length);
        string str(cstr);
        delete[] cstr;
        return str;
    }
};

const string I_HAVE_A_DREAM = R"(I have a dream that one day this nation will rise up and live out the true meaning of its creed: "We hold these truths to be self-evident, that all men are created equal."
I have a dream that one day on the red hills of Georgia the sons of former slaves and the sons of former slave owners will be able to sit down together at the table of brotherhood.
I have a dream that one day even the state of Mississippi, a state sweltering with the heat of injustice, sweltering with the heat of oppression, will be transformed into an oasis of freedom and justice.
I have a dream that my four little children will one day live in a nation where they will not be judged by the color of their skin but by the content of their character.
I have a dream today!
I have a dream that one day, down in Alabama, with its vicious racists, with its governor having his lips dripping with the words of "interposition" and "nullification" -- one day right there in Alabama little black boys and black girls will be able to join hands with little white boys and white girls as sisters and brothers.
I have a dream today!
I have a dream that one day every valley shall be exalted, and every hill and mountain shall be made low, the rough places will be made plain, and the crooked places will be made straight; "and the glory of the Lord shall be revealed and all flesh shall see it together."
This is our hope, and this is the faith that I go back to the South with.
With this faith, we will be able to hew out of the mountain of despair a stone of hope.
With this faith, we will be able to transform the jangling discords of our nation into a beautiful symphony of brotherhood.
With this faith, we will be able to work together, to pray together, to struggle together, to go to jail together, to stand up for freedom together, knowing that we will be free one day.
And if America is to be a great nation, this must become true.
And so let freedom ring from the prodigious hilltops of New Hampshire.
Let freedom ring from the mighty mountains of New York.
Let freedom ring from the heightening Alleghenies of Pennsylvania.
Let freedom ring from the snow-capped Rockies of Colorado.
Let freedom ring from the curvaceous slopes of California.
But not only that: let freedom ring from Stone Mountain of Georgia.
Let freedom ring from Lookout Mountain of Tennessee.
Let freedom ring from every hill and molehill of Mississippi.
From every mountainside, let freedom ring.
And when this happens, when we allow freedom to ring, when we let it ring from every village and every hamlet, from every state and every city, we will be able to speed up that day when all of God's children, black men and white men, Jews and Gentiles, Protestants and Catholics, will be able to join hands and sing in the words of the old Negro spiritual:
"Free at last! Free at last!
Thank God Almighty, we are free at last!")";

void countCharFrequencies(int freq[]) {
    memset(freq, 0, 26 * sizeof(int));
    for (char c : I_HAVE_A_DREAM) {
        if (!isalpha(c)) continue;
        char lowerC = tolower(c);
        freq[lowerC - 'a']++;
    }
}

void generateHuffCodes(BinNode* node, HuffCode& currentCode, HuffCode codes[]) {
    if (node == nullptr) return;
    if (node->left == nullptr && node->right == nullptr) {
        int idx = node->ch - 'a';
        codes[idx] = currentCode;
        return;
    }
    currentCode.appendBit(false);
    generateHuffCodes(node->left, currentCode, codes);
    currentCode.removeLastBit();
    currentCode.appendBit(true);
    generateHuffCodes(node->right, currentCode, codes);
    currentCode.removeLastBit();
}

void encodeWord(const string& word, HuffCode codes[]) {
    cout << "=== 编码单词：" << word << " ===" << endl;
    string totalCode;
    for (char c : word) {
        if (!isalpha(c)) {
            cout << "跳过非字母字符：" << c << endl;
            continue;
        }
        char lowerC = tolower(c);
        int idx = lowerC - 'a';
        if (codes[idx].getLength() == 0) {
            cout << "字符 " << lowerC << " 未在原文中出现，无编码" << endl;
            continue;
        }
        string codeStr = codes[idx].toString();
        cout << lowerC << " → " << codeStr << "（长度：" << codes[idx].getLength() << "）" << endl;
        totalCode += codeStr;
    }
    cout << "单词完整编码：" << totalCode << "\n" << endl;
}

int main() {
    int freq[26];
    countCharFrequencies(freq);
    cout << "==================== 字母频率统计 ====================" << endl;
    for (int i = 0; i < 26; i++) {
        char ch = 'a' + i;
        if (freq[i] > 0) {
            cout << ch << ": " << freq[i] << " 次" << endl;
        }
    }
    cout << "\n" << endl;
    HuffTree huffTree(freq);
    if (huffTree.getRoot() == nullptr) {
        cout << "错误：无有效字符，无法构建Huffman树！" << endl;
        return 1;
    }
    HuffCode codes[26];
    HuffCode currentCode;
    generateHuffCodes(huffTree.getRoot(), currentCode, codes);
    cout << "==================== Huffman编码表 ====================" << endl;
    for (int i = 0; i < 26; i++) {
        char ch = 'a' + i;
        if (freq[i] > 0) {
            cout << ch << ": " << codes[i].toString() << "（长度：" << codes[i].getLength() << "）" << endl;
        }
    }
    cout << "\n" << endl;
    encodeWord("dream", codes);
    encodeWord("freedom", codes);
    encodeWord("justice", codes);
    encodeWord("equality", codes);
    encodeWord("hope", codes);
    return 0;
}
